# Napisz aplikację, która:
# pobierze wiele linii, wpisanego na ekranie tekstu
# policzy wszystkie wyrazy i wypisze ich ilość na ekranie
# policzy tylko unikalne wyrazy.

def count_all_words(text):
	all_words = []
	all_words.extend(text.split())
	print(f"In this sentence there are {len(all_words)} words.")

def count_unique_words(text):
	unique_words = set(text.split())
	print(f"In this sentence there are {len(unique_words)} unique words.")
	
text = input("Enter your text: ")
count_all_words(text)
count_unique_words(text)
